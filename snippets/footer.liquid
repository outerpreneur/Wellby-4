<footer class="footer-global">
  <div class="footer-top">
    <ul class="product-list">
      {{ 'footer.list.products' | t }}
      {% for product in collections.frontpage.products limit: 4 %}
        <li>
          <a href="{{ product.url }}">{{ product.title }}</a>
        </li>
      {% endfor %}
    </ul>
    <ul class="contact-list">
      <h4>{{ linklists.footer.title }}</h4>
      {% for link in linklists.footer.links %}
        <li>
          {% assign child_list_handle = link.title | handleize %}
          {% if linklists[child_list_handle].links != blank %}
            <a href="{{ link.url }}">{{ link.title }}</a>
            [{% for childlink in linklists[child_list_handle].links %}
              <a href="{{ childlink.url }}">{{ childlink.title | escape }}</a>
            {% endfor %}]
          {% else %}
            <a href="{{ link.url }}">{{ link.title }}</a>
          {% endif %}
        </li>
      {% endfor %}
    </ul>
    <div class="about-us">
      <h4>{{ 'general.about.title' | t }}</h4>
      <p>{{ 'general.about.description' | t }}</p>
    </div>
  </div>
  <div class="footer-bottom">
    {% assign copyright_date = 'now' | date: '%Y' %}
    <span class="copyright">{{ 'footer.bottom.copyright' | t: date: copyright_date }}</span>
    <div class="social-links">
      <a href="{{ footer.social.facebook_url | t }}" target="new">
        <img src="{{ 'facebook.svg' | asset_url }}" alt="{{ 'footer.social.alt' | t: social: 'facebook' }}">
      </a>
      <a href="https//www.{{ footer.social.instagram_handle | t }}" target="new">
        <img src="{{ 'instagram.svg' | asset_url }}" alt="{{ 'footer.social.alt' | t: social: 'instagram' }}">
      </a>
      <a href="https//www.{{ footer.social.twitter_handle | t }}" target="new">
        <img src="{{ 'twitter.svg' | asset_url }}" alt="{{ 'footer.social.alt' | t: social: 'twitter' }}">
      </a>
    </div>
  </div>
</footer>